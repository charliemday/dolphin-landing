---
import { LuHeart } from "react-icons/lu";
const testimonials: {
  video?: string;
  videoText?: string;
  text?: string;
  name?: string;
  title?: string;
  image?: string;
}[] = [
  {
    video:
      "https://widget.senja.io/widget/56439915-d8d0-4380-af53-4f78a665d496",
    videoText:
      "We put the raw data in, and Dolphin gives us the top themes back within seconds. We're now able to make faster decisions as a team. Because we get to the facts, faster. I would absolutely recommend Dolphin.",
  },
];
---

<section id="testimonial" class="bg-gray-100">
  <div
    class="mx-auto w-full lg:px-24 max-w-7xl md:px-12 items-center px-8 py-20"
  >
    <div class="flex space-x-4 items-center justify-center">
      <h2
        class="text-black font-extrabold lg:text-5xl text-4xl tracking-tight text-center"
      >
        Loved by Customer-Obsessed Teams
      </h2>
      <!-- <div>
        <LuHeart fontSize={32}/>
      </div> -->
    </div>
    <h3 class="text-center text-lg">
      Turn feedback into revenue backed by customer insights.
    </h3>
    <div class="pt-24">
      {
        testimonials.map((testimonial) => (
          <div>
            {testimonial.video ? (
              <div class="flex ">
                <iframe
                  src={testimonial.video}
                  width="600"
                  height="300"
                  allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen=""
                  style="max-width: 100%;"
                />
                <div class=" w-full pt-4 pl-6">
                  <p class="p-4 font-semibold">"{testimonial.videoText}"</p>
                </div>
              </div>
            ) : null}
            {testimonial.text ? (
              <div>
                <div>
                  <figure class="relative h-full p-6 bg-white rounded-3xl">
                    <blockquote class="relative">
                      <p class="text-base text-gray-500">{testimonial.text}</p>
                    </blockquote>
                    <figcaption class="relative flex items-center justify-between pt-6 mt-6 border-t border-gray-100">
                      <div>
                        <div class="text-lg font-semibold leading-6 text-black font-display">
                          {testimonial.name}
                        </div>
                        <div class="mt-1 text-sm text-gray-500">
                          {testimonial.title}
                        </div>
                      </div>

                      {testimonial.image ? (
                        <div class="overflow-hidden rounded-full bg-gray-50">
                          <img
                            alt=""
                            src={testimonial.image}
                            width="56"
                            height="56"
                            decoding="async"
                            data-nimg="future"
                            class="object-cover h-14 w-14"
                            loading="lazy"
                            style="color: transparent"
                          />
                        </div>
                      ) : null}
                    </figcaption>
                  </figure>
                </div>
              </div>
            ) : null}
          </div>
        ))
      }
    </div>
  </div>
</section>
